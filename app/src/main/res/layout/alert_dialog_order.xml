<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="2dp"
    android:padding="6dp"
    android:background="@drawable/blue_fill__rounded_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@drawable/ic_dompet"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginStart="@dimen/_7sdp"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Saldo Anda"/>
            <TextView
                android:layout_marginStart="@dimen/_7sdp"
                android:id="@+id/saldobefore"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text=" "/>
        </LinearLayout>
    </LinearLayout>
    <!--Telp-->
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry">
        <ImageView
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@drawable/ic_money"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginStart="@dimen/_7sdp"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Total Harga"/>
            <TextView
                android:id="@+id/totalprice"
                android:layout_marginStart="@dimen/_7sdp"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text=" "/>
        </LinearLayout>
    </LinearLayout>
    <!--Alamat-->
    <LinearLayout
        android:orientation="horizontal"
        android:paddingStart="@dimen/_50sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry">
        <View
            android:layout_width="@dimen/_100sdp"
            android:layout_height="2dp"
            android:background="#000"/>
        <View
            android:layout_marginStart="12dp"
            android:layout_width="25dp"
            android:layout_height="2dp"
            android:paddingEnd="10dp"
            android:background="#000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry">
        <View
            android:layout_gravity="center"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginStart="@dimen/_7sdp"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Sisa Saldo"/>
            <TextView
                android:id="@+id/saldoafter"
                android:layout_marginStart="@dimen/_7sdp"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text=" "/>
        </LinearLayout>
    </LinearLayout>

    <!--Tombol-->
    <LinearLayout
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                android:layout_gravity="center"
                android:id="@+id/cancelpay"
                android:layout_width="@dimen/_87sdp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_red"
                android:fontFamily="@font/acme"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Cancel"
                android:textColor="#FFF"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                android:layout_gravity="center"
                android:id="@+id/submitbasket"
                android:layout_width="@dimen/_87sdp"
                android:layout_height="40dp"
                android:fontFamily="@font/acme"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Basket"
                android:background="@drawable/round_blue"
                android:textColor="#FFF"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                android:layout_gravity="center"
                android:id="@+id/submitpay"
                android:layout_width="@dimen/_87sdp"
                android:layout_height="40dp"
                android:enabled="false"
                android:fontFamily="@font/acme"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Bayar"
                android:textColor="#FFF"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>