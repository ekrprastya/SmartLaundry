<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="2dp"
        android:padding="6dp"
        android:background="@drawable/blue_fill__rounded_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="45dp">

        <RelativeLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp">
            <ImageView
                android:id="@+id/gambarbukti"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:src="@drawable/ic_up_arrow"
                android:layout_gravity="center"/>
            <Button
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:id="@+id/uploadbukti"
                android:layout_centerVertical="true"
                android:layout_below="@+id/gambarbukti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Bukti"
                android:textColor="#FFF"
                android:textAlignment="center"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/isinya"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nominal :"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/poppins_medium"
                    tools:ignore="RtlSymmetry" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:checked="true"
                            android:id="@+id/dualima"
                            android:layout_marginStart="10dp"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="40dp"
                            android:text="Rp.25.000"/>
                        <RadioButton
                            android:id="@+id/gocap"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Rp.50.000"/>
                        <RadioButton
                            android:id="@+id/tujuhlima"
                            android:layout_marginStart="10dp"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="40dp"
                            android:text="Rp.75.000"/>
                        <RadioButton
                            android:id="@+id/cepe"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Rp.100.000"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <!--Tombol-->
            <LinearLayout
                android:baselineAligned="false"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <Button
                        android:layout_gravity="center"
                        android:id="@+id/canceltopup"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_red"
                        android:fontFamily="@font/acme"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="Cancel"
                        android:textColor="#FFF"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <Button
                        android:layout_gravity="center"
                        android:id="@+id/submittopup"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_green"
                        android:fontFamily="@font/acme"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="Submit"
                        android:textColor="#FFF"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>